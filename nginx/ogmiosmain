map $http_upgrade $connection_upgrade {
        default upgrade;
        '' close;
}

server {
       server_name ogmiosmain.bakon.dev;
       keepalive_timeout       70;

       location / {
#		auth_basic           "Restricted Content";
#		auth_basic_user_file /home/bakon/.cardano/testnet/nginx/.htpasswd;

                proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;

                # New headers
                proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection $connection_upgrade;

                proxy_http_version 1.1;

#		proxy_set_header  Authorization $http_authorization;
#		proxy_pass_header Authorization;


                proxy_pass http://0.0.0.0:4200;
        }


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/ogmiosmain.bakon.dev/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/ogmiosmain.bakon.dev/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}


server {
    if ($host = ogmiosmain.bakon.dev) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


       server_name ogmiosmain.bakon.dev;
    listen 80;
    return 404; # managed by Certbot


}
